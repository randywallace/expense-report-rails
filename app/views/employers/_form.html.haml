.row.span10
  = form_for(@employer, html: { class: "well form-horizontal"}) do |f| 
    - if @employer.errors.any? 
      #error_explanation
        %h2
          = pluralize(@employer.errors.count, "error")
          = "prohibited this employer from being saved:"
        %ul
          - @employer.errors.full_messages.each do |msg| 
            %li
              = msg
    %fieldset
      .control-group
        = f.label :name, class: "control-label"
        .controls
          = f.text_field :name, class: "input-medium"
      .control-group
        = f.label :date_started, class: "control-label"
        .controls
          = f.text_field :date_started, class: "datepicker"
      .control-group
        = f.label :hourly_rate, class: "control-label"
        .controls
          = f.text_field :hourly_rate
      .control-group
        = f.label :currently_employed, class: "control-label"
        .controls
          = f.check_box :currently_employed
      .form-actions
        = f.submit class: 'btn btn-primary'
