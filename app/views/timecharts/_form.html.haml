.row.span10
  = form_for(@timechart, html: {class: "well form-horizontal"}) do |f|
    - if @timechart.errors.any?
      #error_explanation
        %h2= "#{pluralize(@timechart.errors.count, "error")} prohibited this timechart from being saved:"
        %ul
          - @timechart.errors.full_messages.each do |msg|
            %li= msg
  
    %fieldset
      .control-group
        = f.label :employer, class: "control-label"
        .controls
          = f.select :employer_id, options_from_collection_for_select(Employer.all, :id, :name), class: "input-medium"
      .control-group
        = f.label :start_time, class: "control-label"
        .controls
          = f.text_field :start_time, class: "anytime input-large"
      .control-group
        = f.label :stop_time, class: "control-label"
        .controls
          = f.text_field :stop_time, class: "anytime input-large"
      .control-group
        = f.label :description, class: "control-label"
        .controls
          = f.text_field :description, class: "input-xlarge"
      .form-actions
        = f.submit 'Save', class: 'btn btn-primary'
